<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/homescreen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/svgviewer_output"
        android:clipToOutline="true"
        android:elevation="20dp"/>

    <Button
        android:id="@+id/insert"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/roundedbuttoncor"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Drop an image"
        android:textColor="#F5F5F5"
        android:textAllCaps="false"
        android:clickable="true"
        android:focusable="true"
        android:elevation="30dp"
        android:padding="12dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-35dp"
        android:elevation="30dp"
        android:background="@color/transparent"
        android:src="@drawable/svgviewer_output4" />



    <EditText
        android:id="@+id/textview"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:hint="@string/edittext_hint"
        android:background="@drawable/rounded_edittext_states"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/metropolis_medium"
        android:textColorHint="#B4B4B4"
        android:textColor="#000"
        android:inputType="text"
        android:longClickable="false"
        android:shadowColor="#F5F5F5"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1.5"
        android:elevation="20dp"
        android:padding="13dp" />

    <!--    <EditText-->
    <!--        android:id="@+id/contact_num"-->
    <!--        android:layout_width="296dp"-->
    <!--        android:layout_height="45dp"-->

    <!--        android:textSize="10sp"-->
    <!--        android:layout_alignParentLeft="true"-->
    <!--        android:layout_marginLeft="32dp"-->
    <!--        android:layout_alignParentTop="true"-->
    <!--        android:layout_marginTop="30dp"-->
    <!--        />-->

    <Button
        android:id="@+id/Gen"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundedbuttoncor"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Generate QR"
        android:textColor="#F5F5F5"
        android:textAllCaps="false"
        android:clickable="true"
        android:focusable="true"
        android:elevation="30dp"
        android:padding="12dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="-35dp"
        android:elevation="30dp"
        android:background="@color/transparent"
        android:src="@drawable/qrimg" />
    <!--
    Warning: Using more than one drop shadow effect is not supported, only the last visible one will be used as elevation.
    -->

